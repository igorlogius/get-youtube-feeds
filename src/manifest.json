{
	"name": "get-youtube-feeds",
	"description": "Easy access to youtube user,channel and playlist feeds",
	"version": "1.0.4",
	"manifest_version": 2,
	"icons": {
		"256": "icon.png"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"activeTab"
	],
	"page_action": {
		"browser_style": true,
		"default_icon": "icon.png",
		"default_title": "open feed",
		"show_matches": [ 
			"https://www.youtube.com/user/*",
			"https://www.youtube.com/channel/*",
			"https://www.youtube.com/*&list=*"
		]
	}
}

