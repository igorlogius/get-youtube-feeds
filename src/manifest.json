{
	"name": "get-youtube-feeds",
	"description": "Allows easy access to Youtube Feeds from users, channels and playlists",
	"version": "1.0.2",
	"manifest_version": 2,
	"icons": {
		"256": "icon.png"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"activeTab"
	],
	"page_action": {
		"browser_style": true,
		"default_icon": "icon.png",
		"default_titel": "open feed",
		"show_matches": [ 
			"https://www.youtube.com/user/*",
			"https://www.youtube.com/channel/*",
			"https://www.youtube.com/*&list=*"
		]
	},
	"content_scripts": [{
		"matches": [
			"https://www.youtube.com/user/*",
			"https://www.youtube.com/channel/*",
			"https://www.youtube.com/*&list=*"
		],
		     "js": ["content-script.js"]
	}]
}
